<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <remove name="StaticFile" />
      <add
          name="httpplatformhandler"
          path="*"
          verb="*"
          modules="httpPlatformHandler"
          resourceType="Unspecified"
          requireAccess="Script" />
    </handlers>
    <httpPlatform
        processPath="C:\path\to\bmds-server\venv\Scripts\python.exe"
        arguments="manage.py run_cherrypy_server"
        stdoutLogEnabled="true"
        stdoutLogFile="C:\path\to\bmds-server\logs">
      <environmentVariables>
        <environmentVariable name="DJANGO_SETTINGS_MODULE"    value="bmds_server.settings.production" />
        <environmentVariable name="PYTHONPATH"                value="C:\path\to\bmds-server" />
        <environmentVariable name="DJANGO_SECRET_KEY"         value="i'd-tell-you-but-i'd-have-to-kill-you" />
        <environmentVariable name="DJANGO_ALLOWED_HOSTS"      value="123.456.78.90" />
        <environmentVariable name="DJANGO_EMAIL_HOST"         value="email-server.com" />
        <environmentVariable name="DJANGO_EMAIL_USER"         value="" />
        <environmentVariable name="DJANGO_EMAIL_PASSWORD"     value="" />
        <environmentVariable name="DJANGO_EMAIL_PORT"         value="25" />
        <environmentVariable name="DJANGO_EMAIL_USE_SSL"      value="False" />
        <environmentVariable name="DJANGO_DEFAULT_FROM_EMAIL" value="bmds@email-server.com" />
        <environmentVariable name="DJANGO_PUBLIC_PATH"        value="C:\path\to\bmds-server\public" />
        <environmentVariable name="DJANGO_LOG_FULLPATH"       value="C:\path\to\bmds-server\logs\django.log" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
